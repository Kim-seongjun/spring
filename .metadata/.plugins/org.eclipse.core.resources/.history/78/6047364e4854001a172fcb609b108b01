<script>
	function () {
		let ck = CLEDITOR.replace("content",{
			filebrowserUploadUrl:'http://192.168.0.99/cha_board/api/boards/ckupload'
		});
		
		$("#addAttachment").on("click",function(){
			const input = $("<input>").attr("type","file").attr("class","form-control-file");
			$("#attach").append(input);
		});
		
		$("#write").on("click",function(){
			var formData = new FormData();
			formData.append("content",CKEDITOR.instances['content'].getData());
			
			formData.append("apiKey",apiKey);
			
			$.each($(".form-control-file"),function(idx, attachment){
				console.log("2=","attachment"); //파일태그
				console.log("3=",$(this));
				
				if($(this)[0].files[0]!=undefined) //파일이 첨부되었다면
				formData.append("attachments",$(this)[0].files[0]);
			});
			
			$.ajax({
				url : "http://192.168.0.99/cha_board/api/boards"
			})
		})
		
	}
	
	
	
	
	
	
</script>
