<resultMap type="hfile" id="Housefile">
	<result column="HOUSE_NUMBER" property="house_number"/>
	<result column="HOUSE_SYSNAME" property="house_sysname"/>
</resultMap>

<resultMap type="house" id="House1">
	<result column="HOUSE_NUMBER" property="house_number"/>
	<result column="HOUSE_NAME" property="house_name"/>
	<result column="HOUSE_ADDRESS" property="house_address"/>
	<result column="HOUSE_TYPE" property="house_type"/>
	<result column="HOUSE_GRANTTYPE" property="house_granttype"/>
	<collection property="bbbVo" resultMap="Housefile"/>
</resultMap>


	 <select id="getHouseList"  resultMap="House1"> 
	SELECT 
		RH.HOUSE_NUMBER,
		RH.HOUSE_NAME,
		NVL(RH.HOUSE_ADDRESS,'없음') as HOUSE_ADDRESS, 
 		RH.HOUSE_TYPE,
 		RH.HOUSE_GRANTTYPE,
 		HF.house_sysname 
	FROM 
	REGISTHOUSE RH inner join HOUSEFILE HF 
	on RH.HOUSE_NUMBER = HF.HOUSE_NUMBER 
	
	where HF.HOUSE_IMAGETYPE = 1 
 	and RH.HOUSE_GRANTTYPE =0 
	</select> 

